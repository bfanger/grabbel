{
  "name": "grabbel",
  "version": "0.0.1",
  "description": "A random collection of utilities",
  "license": "MIT",
  "module": "dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "rimraf dist && tsc",
    "postbuild": "terser-folder dist -e -x=.js -o=dist && prettier --loglevel=warn --write dist",
    "lint": "prettier --check --loglevel=warn src",
    "format": "prettier --write src",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "terser-folder": "^2.0.0",
    "typescript": "^4.5.5"
  }
}
